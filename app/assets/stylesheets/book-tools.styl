  .tools
    width 600px
    display table
    background #ADBCCA
    margin auto
    boxShadow()
    position relative
    z-index 2

    input
      padding 0.7em 1em 0.7em 2.5em
      font-size 1em
      font-weight 100
      outline none
      border none
      margin 4px 0 5px 4px
      transition all 0.1s ease-in-out
      background transparent
      width 2.5em
      left 0
      z-index 4
      position absolute

    .icon
      background transparent
      outline none
      border-radius 100%
      cursor initial

      &.favorite
        float left
        padding 15px

        img
          width 30px
          float left
          height 30px

    .cardinality
      float none
      margin auto
      display block
      z-index 5
      width 480px
      color white

      h1
        text-transform capitalize
        width 47%
        float left
        text-align center
        font-size 1.3em
        font-weight 100
        margin 17px 0
        line-height 1.3em

        &:first-of-type
          margin-right 3%

        &:last-of-type
          margin-left 3%

      img
        box-shadow none
        border-bottom none
        float left
        margin .6em -20px 0
        width 40px
        height 40px
        padding 10px
        position relative
        z-index 10

    .menu
      transition height $time ease-in-out, opacity $time ease-in-out
      height 44px
      width 44px
      padding 2px
      border-radius 22px

      &:hover
        background lighten(#adbcca,30%)
        height 124px
        width 44px
        boxShadow()

      .icon
        width 40px
        height 40px
        margin 2px
        border none

        &:focus
          background transparent

          &:hover
            background lighten(#adbcca,45%)

        &:hover
          background lighten(#adbcca,45%)

      &.saving
        background lighten(#adbcca,30%)
        height 84px
        width 44px
        boxShadow()

        .icon
          float right
          width 40px
          height 40px
          border none
          margin 0

          &:focus
            background lighten(#adbcca,30%)

            &:hover
              background lighten(#adbcca,45%)