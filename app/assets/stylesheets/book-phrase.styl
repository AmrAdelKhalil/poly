li.entry
  float left
  width 100%
  display inline-block
  padding 1em
  border-top 1px solid
  border-bottom 1px solid
  border-color transparent
  transition background $time*2 ease-in-out

  &:hover
    background white
    border-top-color lighten(#E7EFF2, 55%)
    border-bottom-color lighten(#E7EFF2, 55%)

    ul li.menu .more
      opacity 1

  ul li.menu .more
    &:focus
      opacity 1

  &:last-of-type
    border-bottom none

  ul
    display inline-block
    width 100%
    padding 0
    float left
    position relative

    li
      display inline-block
      width 100%
      float left

      &:hover
        .options-wrapper
            width 123px

      p, input
        width initial
        display inline-block
        margin 0
        padding .7em 1em
        position relative
        z-index 1
        font-size 1.2em
        max-width 90%
        overflow hidden
        text-overflow ellipsis
        border-style solid
        outline none

      input
        width 80%

      &.source
        p
          border-width 1px
          margin 2px 2px 4px 2px
          border-radius 31px 31px 31px 0
          float left

        p
          background $source
          border 1px solid darken($source, 2%)
          margin 2px 2px 6px 2px

        input
          margin 2px 2px 6px 2px
          background $source
          border-color darken($source, 2%)

        input
          border-width 3px
          margin-bottom 6px
          border-radius 31px 31px 31px 0
          float left
          background transparent
          border-color darken($source, 2%)

          &:focus, &:active
            margin 0 2px 4px 2px
            border-color $source

      &.target
        p
          border-width 1px
          border-radius 31px 31px 0 31px
          margin 2px
          float right

        p
          background $target
          border 1px solid darken($target, 2%)
          margin 2px

        input
          border-width 3px
          border-radius 31px 31px 0 31px
          border-color darken($target, 2%)
          margin-bottom 1px
          text-align right
          float right
          background transparent
          margin 2px

          &:focus, &:active
            margin-top 0
            border-color $target

      input:focus, input:active
        border-width 3px
        border-style solid
        background white
        outline none
        border-color darken($target, 2%)

        input
          border-width 3px
          margin-bottom 1px
          text-align right
          border-radius 31px 31px 0 31px
          float right
          background transparent
          border-color darken($target, 2%)

      &.menu
        width 40px
        top -10px
        right -10px

        &:hover
          width 120px

          .icon
            margin 0
            opacity 1

        .icon
          opacity 0

        &.saving
          width 80px

          .icon
            opacity 1

.container-iframe
  max-width 90%
  width 100%
  overflow hidden
  margin-bottom 6px
  position relative
  
  span 
    display none

  &.source
    float left
    border-radius 31px 31px 31px 0
    // border 1px solid darken($source, 2%)
    background darken($source, 2%)

    iframe
      background inherit

  &.target
    float right
    border-radius 31px 31px 0px 31px
    // border 1px solid $target
    background $target

    iframe
      background inherit

  iframe
    width 100%
    // margin-left -.5%
    height 378px
    float left
    
.loader,
.loader:before,
.loader:after 
  border-radius 50%
  width 2.5em
  height 2.5em
  -webkit-animation-fill-mode both
  animation-fill-mode both
  -webkit-animation load7 1.8s infinite ease-in-out
  animation load7 1.8s infinite ease-in-out

.loader 
  color black
  font-size 10px
  margin 80px auto
  position relative
  text-indent -9999em
  -webkit-transform translateZ(0)
  -ms-transform translateZ(0)
  transform translateZ(0)
  -webkit-animation-delay -0.16s
  animation-delay -0.16s

.loader:before,
.loader:after 
  content ''
  position absolute
  top 0


.loader:before 
  left -3.5em
  -webkit-animation-delay -0.32s
  animation-delay -0.32s


.loader:after 
  left 3.5em


.loader-message 
  text-align center
  font-size 12pt
  margin-bottom 50px

@-webkit-keyframes load7 {
  0%,
  80%,
  100% {
    box-shadow: 0 2.5em 0 -1.3em;
  }
  40% {
    box-shadow: 0 2.5em 0 0;
  }
}
@keyframes load7 {
  0%,
  80%,
  100% {
    box-shadow: 0 2.5em 0 -1.3em;
  }
  40% {
    box-shadow: 0 2.5em 0 0;
  }
}