li.entry
  float left
  width 100%
  display inline-block
  padding 1em
  border-top 1px solid
  border-bottom 1px solid
  border-color transparent
  transition background $time*2 ease-in-out

  &.pre
    ul
      margin 0

      li.target
        opacity .3
        p
          min-height 61px
          min-width 61px

  &:hover
    background white
    border-top-color lighten(#E7EFF2, 55%)
    border-bottom-color lighten(#E7EFF2, 55%)

    ul li.menu .more
      opacity 1

  ul li.menu .more
    &:focus
      opacity 1

  &:last-of-type
    border-bottom none

  ul
    display inline-block
    width 100%
    padding 0
    float left
    position relative

    li
      display inline-block
      width 100%
      float left

      &:hover
        .options-wrapper
            width 123px

      p, input
        width initial
        display inline-block
        margin 0
        padding .7em 1em
        position relative
        z-index 1
        font-size 1.2em
        max-width 90%
        overflow hidden
        text-overflow ellipsis
        border-style solid
        outline none

      input
        width 80%

      &.source
        p
          border-width 1px
          margin 2px 2px 4px 2px
          border-radius 31px 31px 31px 0
          float left
          background $source
          border-color darken($source, 2%)

        input
          border-width 3px
          margin-bottom 6px
          border-radius 31px 31px 31px 0
          float left
          background transparent
          border-color darken($source, 2%)

      &.target
        p
          border-width 1px
          border-radius 31px 31px 0 31px
          margin 2px
          float right
          background $target
          border-color darken($target, 2%)

        input
          border-width 3px
          margin-bottom 1px
          text-align right
          border-radius 31px 31px 0 31px
          float right
          background transparent
          border-color darken($target, 2%)

      &.menu
        width 40px
        top -10px
        right -10px

        &:hover
          width 120px

          .icon
            margin 0
            opacity 1

        .icon
          opacity 0

        &.saving
          width 120px

          .icon
            opacity 1

.progressTicker
  display inline-block
  width 18px
  padding-top 1em

  @keyframes loading
    0%
      transform translateY(0px)
    40%
      transform translateY(-6px)
    80%,100%
      transform translateY(0px)

  span
    background #4F6387
    border-radius 100%
    margin 0 3px 0 0
    height 4px
    width 4px
    float left

    &:nth-of-type(1)
      -webkit-animation loading 1.2s 0s infinite cubic-bezier(.60,0,.40,1)

    &:nth-of-type(2)
      -webkit-animation loading 1.2s .1s infinite cubic-bezier(.60,0,.40,1)

    &:nth-of-type(3)
      margin 0
      -webkit-animation loading 1.2s .2s infinite cubic-bezier(.60,0,.40,1)
