.indexContent
  margin-top 80px

.dashboard
  float left
  width 100%

  .newBook
    position fixed
    z-index 2
    bottom .5em
    left 50%
    margin-left -30px
    materialButton()

    &:focus
      outline none
      box-shadow 0 1px 0 #336fb0, 0 2px 4px rgba(34,84,137,0.5), 0px 1px 0px 5px #FEC23D

  .indexContent
    display table
    position relative
    z-index 1
    width 100%
    max-width 600px
    min-width 450px
    margin-left auto
    margin-right auto
    overflow hidden
    // box-shadow 0 1px 2px rgba(0,0,0,0.1)

    .controlPanel
      border-radius 2*$radius 2*$radius 0 0
      boxShadow()
      height 60px

      button, a
        border none
        background $blue
        transition background $time ease-in-out
        color $white
        padding 15px
        float left
        font-size 1em
        font-weight 100
        position relative

      button
        cursor initial
        &:first-of-type
          float left
          z-index 2

        &:last-of-type
          float right
          z-index 2

        img
          float left
          height 30px
          width 30px

      a
        position absolute
        z-index 1
        text-align center
        width 100%
        display table
        padding 21px 20px 20px 20px
        text-decoration none
        border-radius 2*$radius 2*$radius 0 0

        &:hover
          background lighten($blue,10%)

    .bookEntryList
      box-shadow 0 1px 2px rgba(0,0,0,0.1)
      margin-bottom 10px

    .loadMore
      color $blue
      text-decoration none
      display inline-block
      width 100%
      text-align center
      border-radius 2*$radius
      padding 10px 20px