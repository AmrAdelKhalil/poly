.book
  width 100%
  max-width 600px
  min-width 450px
  margin-bottom 115px
  box-shadow 0 2px 2px rgba(0,0,0,0.2)
  display table
  margin 20px auto 0

  *
    font-weight 100

  fieldset
    border none

  .info, .cardinality, img.banner
    display inline-block
    width 100%
    float left

  .info, img.banner
    background #fff

  .bannerWrapper
    height 400px
    overflow hidden
    width 100%
    position relative
    background-size cover
    background-position center

  .progressBar
    height 4px
    width 100%
    background #eee
    float left

    .bar
      height 100%
      min-width 3px
      float left
      background $buttonBlue

  .info
    z-index 1
    position relative
    padding 0 20px
    max-width 600px

    .wrapper
      width 100%
      margin auto
      position relative
      display table

      .menu
        top 20px
        right -20px

      section
        button
          border none
          padding 8px
          margin 7px
          position relative
          cursor pointer
          background transparent
          border-radius 100%
          outline none

          &:hover
            .buttonBackground
              height 45px
              width 45px
              margin -4px -4.6px

          &:active
            padding 9px 8px 7px

            img.star
              float left

          &.favorite
            float left

          &.deleteBook
            float right

          span.buttonBackground
            height 0px
            width 0px
            display block
            display none
            position absolute
            z-index 0
            background #f7f7f7
            margin 29.5px
            border-radius 100%
            box-shadow inset 0 1px 1px rgba(0,0,0,0.1)
            transition all $time ease-in-out

      h1
        float left
        width 100%
        max-width 550px
        white-space normal
        overflow hidden
        font-size 1.7em

      h3
        line-height 2.4em
        margin-bottom 0
        float right

      .description,
      .author
        float left

      .descriptionOptions
        float right
        width 36px
        height 73px
        border-radius 34px
        padding 1px
        margin-top 30px

        button
          float left
          width 32px
          border-radius 100%
          opacity .5
          transition opacity $time ease-in-out

          &.video
            padding 3px 4px
            margin-top 4px

          &:hover
            opacity .7

          &.selectedInput
            opacity 1
            background $buttonBlue

      .videoDescription
        margin 0 -20px
        display block

      .description
        width 510px
        min-height 60px
        margin 0 0 1.5em 0
        padding 2px 2px 4px

        button
          background none
          border none
          color $buttonBlue
          cursor pointer

      a.author, p.author
        clear both
        padding 8px 11px
        margin -8px -11px 1em
        font-size 12px
        text-decoration none
        border-radius $radius

      p.author
        color #aaa

      a.author
        color $buttonBlue
