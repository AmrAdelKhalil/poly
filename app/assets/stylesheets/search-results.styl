.search
  .indexContent
    margin-bottom 20px

    .controlPanel
      background #90A2B7

      p
        float left
        padding 21px 20px 20px
        margin 0
        font-weight 100
        color white
        transition color $time ease-in-out

      .bookCount.search
        float right
        background lighten(#90A2B7,20%)
        font-weight 500
        padding 2px 4px
        color white
        margin 18px 20px
        border-radius $radius

    .bookEntryList
      max-height 70vh
      overflow-y scroll

      .bookEntry.entry
        h2
          font-size 1.3em
          font-weight 500
          margin 0

        ul
          width 200px
          float none
          margin auto
          display block

          li
            &.source
              p
                border-radius 12px 12px 12px 0
                margin 6px 2px 0 2px

            &.target
              p
                border-radius 12px 12px 0 12px

            p
              font-size .5em