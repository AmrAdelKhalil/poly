.search
  .indexContent
    margin-bottom 20px
    border none

    &:not(:first-of-type)
      margin-top 0

    .controlPanel
      height initial
      background transparent

      p
        float left
        padding 17px 20px
        margin 0
        font-weight 100
        color darken($grey,30%)
        transition color $time ease-in-out
        font-size .8em

      .bookCount.search
        float right
        background $secondaryBlue
        font-weight 500
        padding 2px 4px
        color $white
        margin 13px 20px
        border-radius $radius

    .bookEntryList
      max-height 70vh
      overflow-y scroll
      border-radius 2*$radius
      border-left 1px solid rgba(0,0,0,0.15)
      border-right 1px solid rgba(0,0,0,0.15)
      border-bottom 1px solid rgba(0,0,0,0.15)

      &:hover
        li
          opacity 1

      .phrase
        text-decoration none
        border-bottom 2px solid #F2F5F6
        display inline-block
        width 100%

        h2.title
          font-size 1.0em
          font-weight 500
          margin 0
          padding .6em
          background lighten(#F2F5F6, 50%)
          color $blue

        .bookEntry
          ul
            float none
            margin auto
            display table
            list-style-type none
            padding 1em
            width 100%

            li
              width 100%
              float left

              p
                width initial
                display inline-block
                margin 0
                padding .7em 1em
                position relative
                z-index 1
                font-size 1.2em
                max-width 90%
                overflow hidden
                text-overflow ellipsis
                border-style solid
                outline none

              &.source
                p
                  border-width 1px
                  margin 2px 2px 4px 2px
                  border-radius 31px 31px 31px 0
                  float left

                p
                  background $source
                  border 1px solid darken($source, 2%)
                  margin 2px 2px 6px 2px

              &.target
                p
                  border-width 1px
                  border-radius 31px 31px 0 31px
                  margin 2px
                  float right

                p
                  background $target
                  border 1px solid darken($target, 2%)
                  margin 2px
