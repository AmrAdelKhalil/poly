ul.bookEntryList
  background #fff
  padding 0
  margin 0
  list-style-type none
  width 100%
  box-shadow 0 1px 2px rgba(0,0,0,0.1)
  transition background $time*2 ease-in-out, opacity $time*2 ease-in-out
  // border-radius 0 0 2*$radius 2*$radius
  // border-left 1px solid rgba(0,0,0,0.15)
  // border-right 1px solid rgba(0,0,0,0.15)
  // border-bottom 1px solid rgba(0,0,0,0.15)

  &:hover
    background lighten(#E7EFF2, 80%)

    li
      opacity .6

  li.bookEntry, li.emptyList
    overflow hidden
    display table
    border-bottom 1px solid lighten(#E7EFF2, 35%)
    width 100%
    transition background $time*2 ease-in-out, opacity $time*2 ease-in-out

    &:last-of-type
      // border-radius 0 0 2*$radius 2*$radius

    &:hover
      opacity 1
      background #fff
      border-bottom-color lighten(#E7EFF2, 55%)

    a
      display inline-block
      width 100%
      height 100%
      float left
      border-left 3px solid transparent

      &:focus
        outline none
        border-left-color #FEC23D

      img
        float left
        margin 30px

      p
        margin 7px 0 0 0
        float left
        overflow hidden
        text-overflow ellipsis
        white-space nowrap

      section
        display inline-block

        &.info
          width 100%
          float left

          .clear
            padding 15px 0 15px 15px
            width 70%
            float left

            .title
              float left
              margin 0 0 7px 0
              font-weight 500
              font-size 1.3em

              .count
                font-size .5em
                padding 3px
                float right
                background #F2F5F6
                color darken(#F2F5F6, 40%)
                margin 2px 0 0 5px
                border-radius 2px

            .details
              float left
              display inline-block
              clear left
              margin 0
              width 100%

              .language
                text-transform capitalize
                float left
                font-weight 100
                text-align center
                padding 0
                margin 0
                max-width 45%

              img
                float left
                margin 0
                padding 0 4px

          .meta
            padding 15px 15px 15px 0
            width 29%
            float right
            margin 0

            p
              float right
              text-align right
              margin 0
              clear right
              font-size .8em
              color #aaa
              font-weight 100
              white-space normal
              width 100%

              &.author
                margin-top 4px

              &.date
                margin-top 10px