  .tools
    width 600px
    display table
    background white
    box-shadow 0 1px 1px rgba(0,0,0,0.1)
    margin auto

    // .more
    //   float right
    //   margin 16px

    .progressBar
      height 4px
      width 100%
      background #eee
      float left

      .bar
        height 100%
        min-width 3px
        float left
        background $buttonBlue

    input
      padding 0.7em 1em 0.7em 2.5em
      font-size 1em
      font-weight 100
      outline none
      border none
      margin 4px 0 5px 4px
      transition all 0.1s ease-in-out
      background-image url("/assets/icons/i_search")
      background-repeat no-repeat
      background-size 28px
      background-position 10px
      width 2.5em

      &:hover, &:focus
        width 538px
        background-color #fafafa