  .tools
    width 600px
    display table
    background #ADBCCA
    margin auto
    boxShadow()
    position relative
    z-index 2

    // .more
    //   float right
    //   margin 16px

    .progressBar
      height 4px
      width 100%
      background #eee
      float left

      .bar
        height 100%
        min-width 3px
        float left
        background $buttonBlue

    input
      padding 0.7em 1em 0.7em 2.5em
      font-size 1em
      font-weight 100
      outline none
      border none
      margin 4px 0 5px 4px
      transition all 0.1s ease-in-out
      background-image url("/assets/icons/i_search")
      background-repeat no-repeat
      background-size 28px
      background-position 10px
      width 2.5em
      left 0
      z-index 4
      position absolute

      &:hover, &:focus
        width 538px
        background-color #fafafa

    .icon
      background transparent
      // float right
      // margin 6px
      padding 15px
      outline none
      border-radius 100%
      opacity .3
      cursor initial

      &:first-of-type
        float left

      &:last-of-type
        float right

      img
        width 30px
        float left
        height 30px

      // &:hover
      //   background-color lighten(#ADBCCA, 15%)

    .cardinality
      float left
      z-index 5
      width 480px
      color white

      h1
        width 48%
        float left
        text-align center
        font-size 1.3em
        font-weight 100
        margin 17px 0

      img
        box-shadow none
        border-bottom none
        float left
        margin .5em -20px 0
        width 40px
        height 40px
        padding 10px
        // background #fff
        position relative
        z-index 10