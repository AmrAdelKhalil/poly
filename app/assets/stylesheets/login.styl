#login
  width 600px
  background white
  boxShadow()
  padding 40px 0
  display block
  border-radius $radius
  margin auto
  overflow auto

  h2
    width 100%
    text-align center
    font-size 3em
    font-weight 100

  p
    width 60%
    margin auto

  .field
    width 350px
    margin 0 auto 20px
    overflow hidden

    label
      width 25%
      float left
      text-align right

    input:not([type="hidden"])
      width 72%
      margin-left 3%
      float right

  .field.checkbox
    input:not([type="hidden"])
      width 2%
      margin-left 32%
      float none

    label
      width 61%
      margin-left 3%
      float right
      text-align left

  .actions
    input
      border none
      margin auto
      display block
      font-size 13px
      text-transform uppercase
      textButton()

  span
    width 49.5%
    display inline-block
    text-align center

    a
      cursor pointer
      color lighten($blue, 35%)
      text-decoration none

      &:hover
        text-decoration underline

  .container
    position relative
    transition margin-left $time*2 ease-in-out

    form
      float left
      width 600px
      padding 0 40px

      &.resetPassword
        button
          margin-top 140px