.icon
  padding 2px

  &.home
    height 40px
    width 40px
    background-image url("/assets/icons/i_home")
    background-size 36px
    background-position 2px 3px
    background-repeat no-repeat
    float left
    margin 12px 10px

  &.search
    height 30px

  &.more
    height 45px
    padding 10px

  &.star
    height 35px

  &.cardinality
    background-image url("/assets/icons/i_cardinality")
    height 20px
    width 20px
    background-repeat no-repeat
    float left

    &.bookEntry
      background-position 3px 3px
      background-size 14px
      margin 6px 10px

    &.book
      background-position 1px 1px
      background-size 18px
      margin 26px -10px
      box-shadow none

  &.trash
    height 35px

  &.sort
    height 35px

  &.check
    height 35px