.icon
  padding 2px
  background-repeat no-repeat
  border none
  background-color transparent
  cursor pointer

  &.home
    height 40px
    width 40px
    background-image url("/assets/icons/i_home")
    background-size 36px
    background-position 2px 3px
    margin 12px 10px

  &.search
    height 30px

  &.more
    background-image url("/assets/icons/i_more")
    background-size 20px 20px
    background-position center
    padding 10px

  &.edit
    background-image url("/assets/icons/i_edit")
    background-size 22px 22px
    background-position center
    padding 10px

  &.close
    background-image url("/assets/icons/i_close")
    background-size 22px 22px
    background-position center
    padding 10px

  &.save
    background-image url("/assets/icons/i_save")
    background-size 22px 22px
    background-position center
    padding 10px

  &.star
    height 35px

  &.cardinality
    background-image url("/assets/icons/i_cardinality")
    height 20px
    width 20px
    float left

    &.bookEntry
      background-position 3px 3px
      background-size 14px
      margin 6px 10px

    &.book
      background-position 1px 1px
      background-size 18px
      margin 26px 2px
      box-shadow none

  &.trash
    background-image url("/assets/icons/i_trash")
    background-size 20px 20px
    background-position center


  &.sort
    height 35px

  &.check
    height 35px