.icon
  padding 7px
  background-repeat no-repeat
  border none
  background-color transparent
  cursor pointer

  &.home
    height 40px
    width 40px
    margin 12px 10px
    padding 0

  &.search
    height 30px

  &.more
    padding 9px

  &.close
    padding 9px

  &.save
    background-image url("/assets/icons/i_save")
    background-size 22px 22px
    background-position center
    padding 10px

  &.star
    height 35px

  &.cardinality
    height 20px
    width 20px
    float left

    &.bookEntry
      background-position 3px 3px
      background-size 14px
      margin 6px 10px

    &.book
      background-position 1px 1px
      background-size 18px
      margin 26px 2px
      box-shadow none

  &.sort
    height 35px

  &.check
    height 35px